<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12">

    <RelativeLayout
        android:id="@+id/box_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/header_main">

        <ImageView
            android:id="@+id/img_back"
            style="@style/img_nav"
            android:src="@drawable/pg_back" />

        <TextView
            android:id="@+id/tex_title"
            style="@style/tex_title"
            android:gravity="center_horizontal"
            android:text="作者详情" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                style="@style/img_show"
                android:src="@drawable/pg_libai" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tex_author_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="李白"
                        android:textColor="@color/poem_author_color"
                        android:textSize="30sp" />

                    <View
                        style="@style/line_show"
                        android:layout_width="60dp"
                        android:layout_height="4dp"
                        android:background="#ff0000" />


                </LinearLayout>

                <View
                    style="@style/line_show"
                    android:layout_weight="1"
                    android:background="#d3d3d3" />

                <!--<ImageView-->
                <!--style="@style/img_nav"-->
                <!--android:layout_gravity="center"-->
                <!--android:src="@drawable/pg_heart" />-->
            </LinearLayout>

            <TextView
                android:id="@+id/tex_author_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/libai"
                android:textColor="@color/poem_content_color"
                android:textSize="20sp" />

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="#d3d3d3" />-->


            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="0dp"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:layout_weight="1"-->
                <!--android:text="作品列表"-->
                <!--android:textColor="@color/btn_tex"-->
                <!--android:textSize="30sp" />-->

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="#d3d3d3" />-->

            <!--<ListView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"></ListView>-->

        </LinearLayout>
    </ScrollView>

</LinearLayout>