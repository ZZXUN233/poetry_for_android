<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_poem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pd_5"
        android:gravity="left"
        android:maxLines="2"
        android:text="春晓"
        android:textColor="@color/poem_content_color"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_poem_title">

        <View
            android:id="@+id/view4"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/pd_5"
            android:layout_marginRight="2dp"
            android:background="@color/nav_brown" />

        <TextView
            android:id="@+id/item_poem_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="李白"
            android:textColor="@color/poem_author_color"
            android:textSize="20sp" />

    </LinearLayout>


</RelativeLayout>